<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/shiprocket/serviceability" method="POST">
        <service class="Formula\Shiprocket\Api\ServiceabilityInterface" method="checkServiceability"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

        <!-- Unified Shiprocket webhook for all status updates (shipments and returns) -->
    <route url="/V1/shiprocket/webhook/status-update" method="POST">
        <service class="Formula\Shiprocket\Api\ShiprocketWebhookInterface" method="handleStatusUpdate"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>