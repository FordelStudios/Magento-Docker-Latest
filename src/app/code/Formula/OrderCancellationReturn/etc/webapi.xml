<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    
    <!-- Customer cancel order -->
    <route url="/V1/orders/cancel" method="POST">
        <service class="Formula\OrderCancellationReturn\Api\OrderCancellationInterface" method="cancelOrder"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>

    <!-- Customer return order -->
    <route url="/V1/orders/return" method="POST">
        <service class="Formula\OrderCancellationReturn\Api\OrderReturnInterface" method="returnOrder"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>

    <!-- Admin cancel order -->
    <route url="/V1/admin/orders/:orderId/cancel" method="POST">
        <service class="Formula\OrderCancellationReturn\Api\OrderCancellationInterface" method="cancelOrder"/>
        <resources>
            <resource ref="Magento_Sales::actions_edit"/>
        </resources>
    </route>

    <!-- Admin return order -->
    <route url="/V1/admin/orders/:orderId/return" method="POST">
        <service class="Formula\OrderCancellationReturn\Api\OrderReturnInterface" method="returnOrder"/>
        <resources>
            <resource ref="Magento_Sales::actions_edit"/>
        </resources>
    </route>
</routes>