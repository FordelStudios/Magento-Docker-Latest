<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">formula_faceconcern_listing.formula_faceconcern_listing_data_source</item>
            <item name="deps" xsi:type="string">formula_faceconcern_listing.formula_faceconcern_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add New FaceConcern</label>
            </button>
        </buttons>
        <spinner>formula_faceconcern_columns</spinner>
        <deps>
            <dep>formula_faceconcern_listing.formula_faceconcern_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="formula_faceconcern_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">faceconcern_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Formula_FaceConcern::faceconcern</aclResource>
        <dataProvider class="Formula\FaceConcern\Ui\DataProvider\FaceConcern\ListingDataProvider" name="formula_faceconcern_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>faceconcern_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters"/>
        <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected faceconcerns?</message>
                        <title translate="true">Delete faceconcerns</title>
                    </confirm>
                    <url path="formula_faceconcern/faceconcern/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="formula_faceconcern_columns">
        <selectionsColumn name="ids">
            <settings>
                <indexField>faceconcern_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="faceconcern_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="name">
            <settings>
                <filter>text</filter>
                <label translate="true">Name</label>
            </settings>
        </column>
      <column name="description" class="Magento\Ui\Component\Listing\Columns\Column">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Description</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="escapeHtml" xsi:type="boolean">false</item>
                    <item name="truncate" xsi:type="number">50</item>
                </item>
            </argument>
        </column>
        <column name="logo" component="Magento_Ui/js/grid/columns/thumbnail">
            <settings>
                <label translate="true">Logo</label>
                <bodyTmpl>ui/grid/cells/thumbnail</bodyTmpl>
                <sortable>false</sortable>
                <filter>false</filter>
            </settings>
        </column>
        <column name="tags">
            <settings>
                <filter>text</filter>
                <label translate="true">Tags</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Formula\FaceConcern\Ui\Component\Listing\Column\Actions">
            <settings>
                <indexField>faceconcern_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>107</resizeDefaultWidth>
            </settings>
        </actionsColumn>
    </columns>
</listing>