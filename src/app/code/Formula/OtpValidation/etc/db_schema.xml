<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="formula_otp_validation" resource="default" engine="innodb" comment="OTP Validation Table">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="false" comment="Customer ID"/>
        <column xsi:type="varchar" name="phone_number" length="15" nullable="false" comment="Phone Number"/>
        <column xsi:type="varchar" name="otp_code" length="10" nullable="false" comment="OTP Code"/>
        <column xsi:type="timestamp" name="expires_at" on_update="false" nullable="false" comment="OTP Expiry Time"/>
        <column xsi:type="boolean" name="is_verified" default="false" comment="Is Verified"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="FORMULA_OTP_VALIDATION_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID"
                   table="formula_otp_validation" column="customer_id"
                   referenceTable="customer_entity" referenceColumn="entity_id" onDelete="CASCADE"/>

        <index referenceId="FORMULA_OTP_VALIDATION_CUSTOMER_ID_PHONE_NUMBER" indexType="btree">
            <column name="customer_id"/>
            <column name="phone_number"/>
        </index>

        <index referenceId="FORMULA_OTP_VALIDATION_EXPIRES_AT" indexType="btree">
            <column name="expires_at"/>
        </index>
    </table>
</schema>