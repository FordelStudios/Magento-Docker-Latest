<?xml version="1.0"?>
<!-- app/code/Formula/CountryFormulaBanners/etc/webapi.xml -->
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    
    <!-- Get banner by ID -->
    <route url="/V1/formula-country-banners/:id" method="GET">
        <service class="Formula\CountryFormulaBanners\Api\CountryFormulaBannerRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    
    <!-- Get banners by country ID -->
    <route url="/V1/formula-country-banners/country/:countryId" method="GET">
        <service class="Formula\CountryFormulaBanners\Api\CountryFormulaBannerRepositoryInterface" method="getByCountry"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    
    <!-- Create/Update a banner -->
    <route url="/V1/formula-country-banners" method="POST">
        <service class="Formula\CountryFormulaBanners\Api\CountryFormulaBannerRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    
    <!-- Delete a banner -->
    <route url="/V1/formula-country-banners/:id" method="DELETE">
        <service class="Formula\CountryFormulaBanners\Api\CountryFormulaBannerRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    
    <!-- Upload an image for a banner -->
    <route url="/V1/formula-country-banners/image/upload" method="POST">
        <service class="Formula\CountryFormulaBanners\Api\BannerImageUploaderInterface" method="uploadImage"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    
</routes>