<?xml version="1.0"?>
<!--
/**
 * Dependency injection configuration
 * Registers plugin to intercept order sequence generation
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Plugin to customize order increment ID -->
    <type name="Magento\SalesSequence\Model\Sequence">
        <plugin name="formula_custom_order_increment_id"
                type="Formula\OrderIncrementId\Plugin\SequencePlugin"
                sortOrder="10"/>
    </type>
</config>
