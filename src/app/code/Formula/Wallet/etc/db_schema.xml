<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <!-- Wallet Transaction Table -->
    <table name="formula_wallet_transaction" resource="default" engine="innodb" comment="Wallet Transaction History">
        <column xsi:type="int" name="transaction_id" unsigned="true" nullable="false" identity="true" comment="Transaction ID"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="false" comment="Customer ID"/>
        <column xsi:type="decimal" name="amount" scale="4" precision="20" unsigned="false" nullable="false" default="0.0000" comment="Transaction Amount (Absolute Value)"/>
        <column xsi:type="varchar" name="type" nullable="false" length="20" comment="Transaction Type (credit/debit)"/>
        <column xsi:type="decimal" name="balance_before" scale="4" precision="20" unsigned="false" nullable="false" default="0.0000" comment="Balance Before Transaction"/>
        <column xsi:type="decimal" name="balance_after" scale="4" precision="20" unsigned="false" nullable="false" default="0.0000" comment="Balance After Transaction"/>
        <column xsi:type="varchar" name="description" nullable="true" length="500" comment="Transaction Description"/>
        <column xsi:type="varchar" name="reference_type" nullable="true" length="50" comment="Reference Type (order, refund, order_cancel, order_return, admin_api, admin_panel)"/>
        <column xsi:type="int" name="reference_id" unsigned="true" nullable="true" comment="Reference ID (Order ID, Creditmemo ID, etc.)"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Created At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="transaction_id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="FK_WALLET_TRANSACTION_CUSTOMER" table="formula_wallet_transaction" column="customer_id" referenceTable="customer_entity" referenceColumn="entity_id" onDelete="CASCADE"/>

        <index referenceId="IDX_WALLET_TRANSACTION_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>

        <index referenceId="IDX_WALLET_TRANSACTION_TYPE" indexType="btree">
            <column name="type"/>
        </index>

        <index referenceId="IDX_WALLET_TRANSACTION_CREATED_AT" indexType="btree">
            <column name="created_at"/>
        </index>

        <index referenceId="IDX_WALLET_TRANSACTION_REFERENCE" indexType="btree">
            <column name="reference_type"/>
            <column name="reference_id"/>
        </index>
    </table>

</schema>
