<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">
				formula_ingredient_form.formula_ingredient_form_data_source
			</item>
		</item>
		<item name="label" xsi:type="string" translate="true">
			Ingredient Information
		</item>
		<item name="template" xsi:type="string">
			templates/form/collapsible
		</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Formula\Ingredient\Block\Adminhtml\Ingredient\Edit\BackButton" />
			<button name="save" class="Formula\Ingredient\Block\Adminhtml\Ingredient\Edit\SaveButton" />
		</buttons>
		<namespace>
			formula_ingredient_form
		</namespace>
		<dataScope>
			data
		</dataScope>
		<deps>
			<dep>
				formula_ingredient_form.formula_ingredient_form_data_source
			</dep>
		</deps>
	</settings>
	<dataSource name="formula_ingredient_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">
					Magento_Ui/js/form/provider
				</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save" />
		</settings>
		<dataProvider class="Formula\Ingredient\Model\Ingredient\DataProvider" name="formula_ingredient_form_data_source">
			<settings>
				<requestFieldName>
					ingredient_id
				</requestFieldName>
				<primaryFieldName>
					ingredient_id
				</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label translate="true">
				Ingredient Information
			</label>
		</settings>
		<field name="ingredient_id" formElement="input">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">
						ingredient
					</item>
				</item>
			</argument>
			<settings>
				<dataType>
					text
				</dataType>
				<visible>
					false
				</visible>
				<dataScope>
					ingredient_id
				</dataScope>
			</settings>
		</field>
		<field name="name" formElement="input">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">
						ingredient
					</item>
				</item>
			</argument>
			<settings>
				<dataType>
					text
				</dataType>
				<label translate="true">
					Ingredient Name
				</label>
				<validation>
					<rule name="required-entry" xsi:type="boolean">
						true
					</rule>
				</validation>
			</settings>
		</field>
		<field name="description" formElement="textarea">
			<settings>
				<dataType>
					text
				</dataType>
				<label translate="true">
					Description
				</label>
			</settings>
		</field>
		<field name="benefits" formElement="textarea">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">
						ingredient
					</item>
					<item name="notice" xsi:type="string">
						Enter benefits separated by commas
					</item>
				</item>
			</argument>
			<settings>
				<dataType>
					text
				</dataType>
				<label translate="true">
					Benefits
				</label>
			</settings>
		</field>
		<field name="logo" formElement="imageUploader">
			<settings>
				<label translate="true">
					Ingredient Logo
				</label>
				<componentType>
					imageUploader
				</componentType>
			</settings>
			<formElements>
				<imageUploader>
					<settings>
						<allowedExtensions>
							jpg jpeg gif png
						</allowedExtensions>
						<maxFileSize>
							2097152
						</maxFileSize>
						<uploaderConfig>
							<param xsi:type="string" name="url">
								formula_ingredient/ingredient/upload
							</param>
						</uploaderConfig>
					</settings>
				</imageUploader>
			</formElements>
		</field>
		<field name="is_korean" formElement="checkbox">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">
						ingredient
					</item>
					<item name="default" xsi:type="number">
						0
					</item>
				</item>
			</argument>
			<settings>
				<dataType>
					boolean
				</dataType>
				<label translate="true">
					Is Korean Ingredient
				</label>
				<dataScope>
					is_korean
				</dataScope>
			</settings>
			<formElements>
				<checkbox>
					<settings>
						<valueMap>
							<map name="false" xsi:type="number">
								0
							</map>
							<map name="true" xsi:type="number">
								1
							</map>
						</valueMap>
						<prefer>
							toggle
						</prefer>
					</settings>
				</checkbox>
			</formElements>
		</field>
	</fieldset>
</form>
