<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">formula_ingredient_form.formula_ingredient_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Ingredient Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Formula\Ingredient\Block\Adminhtml\Ingredient\Edit\BackButton"/>
            <button name="save" class="Formula\Ingredient\Block\Adminhtml\Ingredient\Edit\SaveButton"/>
        </buttons>
        <namespace>formula_ingredient_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>formula_ingredient_form.formula_ingredient_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="formula_ingredient_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Formula\Ingredient\Model\Ingredient\DataProvider" name="formula_ingredient_form_data_source">
            <settings>
                <requestFieldName>ingredient_id</requestFieldName>
                <primaryFieldName>ingredient_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">Ingredient Information</label>
        </settings>
        <field name="ingredient_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">ingredient</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>ingredient_id</dataScope>
            </settings>
        </field>

        <field name="name" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">ingredient</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Ingredient Name</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="tagline" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">ingredient</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Ingredient Tagline</label>
            </settings>
        </field>

        <field name="description" formElement="textarea">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Description</label>
            </settings>
        </field>

        <field name="tags" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">ingredient</item>
                    <item name="notice" xsi:type="string">Enter tags separated by commas</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Tags</label>
            </settings>
        </field>

        <field name="logo" formElement="imageUploader">
            <settings>
                <label translate="true">Ingredient Logo</label>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>2097152</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">formula_ingredient/ingredient/upload</param>
                        </uploaderConfig>
                    </settings>
                </imageUploader>
            </formElements>
        </field>

        <field name="promotional_banners" formElement="imageUploader">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">ingredient</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="label" xsi:type="string" translate="true">Promotional Banners</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="required" xsi:type="boolean">false</item>
                    <item name="notice" xsi:type="string" translate="true">Allowed file types: jpg, jpeg, gif, png</item>
                    <item name="maxFileSize" xsi:type="number">2097152</item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="string">formula_ingredient/ingredient/uploadBanner</item>
                    </item>
                    <item name="multiple" xsi:type="boolean">true</item>
                </item>
            </argument>
            <settings>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>2097152</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">formula_ingredient/ingredient/uploadBanner</param>
                        </uploaderConfig>
                        <isMultipleFiles>true</isMultipleFiles>
                    </settings>
                </imageUploader>
            </formElements>
        </field>

        <field name="status" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Status</label>
                <dataScope>status</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Config\Model\Config\Source\Yesno"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>