<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">categorybentobanner_form.categorybentobanner_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Bento Banner Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Formula\CategoryBentoBanners\Block\Adminhtml\CategoryBentoBanner\Edit\BackButton"/>
            <button name="delete" class="Formula\CategoryBentoBanners\Block\Adminhtml\CategoryBentoBanner\Edit\DeleteButton"/>
            <button name="save" class="Formula\CategoryBentoBanners\Block\Adminhtml\CategoryBentoBanner\Edit\SaveButton"/>
            <button name="save_and_continue" class="Formula\CategoryBentoBanners\Block\Adminhtml\CategoryBentoBanner\Edit\SaveAndContinueButton"/>
        </buttons>
        <namespace>categorybentobanner_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>categorybentobanner_form.categorybentobanner_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="categorybentobanner_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="categorybentobanner/categorybentobanner/save"/>
        </settings>
        <dataProvider class="Formula\CategoryBentoBanners\Model\BentoBanner\DataProvider" name="categorybentobanner_form_data_source">
            <settings>
                <requestFieldName>entity_id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">Bento Banner Information</label>
        </settings>
        <field name="entity_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">categorybentobanner</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>entity_id</dataScope>
            </settings>
        </field>
        <field name="category_id" formElement="select" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">categorybentobanner</item>
                </item>
            </argument>
            <settings>
                <dataType>int</dataType>
                <label translate="true">Category</label>
                <dataScope>category_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Formula\CategoryBentoBanners\Ui\Component\Form\CategoryOptions"/>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="banner_image" formElement="fileUploader" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">categorybentobanner</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>string</dataType>
                <label translate="true">Banner Image</label>
                <dataScope>banner_image</dataScope>
            </settings>
            <formElements>
                <fileUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>20971520</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">categorybentobanner/categorybentobanner/upload</param>
                        </uploaderConfig>
                    </settings>
                </fileUploader>
            </formElements>
        </field>

        <field name="url" formElement="input" sortOrder="30">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">categorybentobanner</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>string</dataType>
                <label translate="true">URL</label>
                <dataScope>url</dataScope>
            </settings>
        </field>

        <field name="is_active" formElement="checkbox" sortOrder="40">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">categorybentobanner</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Active</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
</form>