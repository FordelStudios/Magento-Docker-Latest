<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">formula_brand_form.formula_brand_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Brand Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Formula\Brand\Block\Adminhtml\Brand\Edit\BackButton"/>
            <button name="save" class="Formula\Brand\Block\Adminhtml\Brand\Edit\SaveButton"/>
        </buttons>
        <namespace>formula_brand_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>formula_brand_form.formula_brand_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="formula_brand_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Formula\Brand\Model\Brand\DataProvider" name="formula_brand_form_data_source">
            <settings>
                <requestFieldName>brand_id</requestFieldName>
                <primaryFieldName>brand_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">Brand Information</label>
        </settings>
        <field name="brand_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">brand</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>brand_id</dataScope>
            </settings>
        </field>

        <field name="name" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">brand</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Brand Name</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="tagline" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">brand</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Brand Tagline</label>
            </settings>
        </field>

        <field name="certifications" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">brand</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Brand Certifications</label>
            </settings>
        </field>

        <field name="description" formElement="textarea">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Description</label>
            </settings>
        </field>

        <field name="tags" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">brand</item>
                    <item name="notice" xsi:type="string">Enter tags separated by commas</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Tags</label>
            </settings>
        </field>

        <field name="country" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">brand</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Country</label>
                <dataScope>country</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Directory\Model\Config\Source\Country"/>
                        <caption translate="true">-- Please Select Country --</caption>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="logo" formElement="imageUploader">
            <settings>
                <label translate="true">Brand Logo</label>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>2097152</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">formula_brand/brand/upload</param>
                        </uploaderConfig>
                    </settings>
                </imageUploader>
            </formElements>
        </field>

        <field name="promotional_banners" formElement="imageUploader">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">brand</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="label" xsi:type="string" translate="true">Promotional Banners</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="required" xsi:type="boolean">false</item>
                    <item name="notice" xsi:type="string" translate="true">Allowed file types: jpg, jpeg, gif, png</item>
                    <item name="maxFileSize" xsi:type="number">2097152</item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="string">formula_brand/brand/uploadBanner</item>
                    </item>
                    <item name="multiple" xsi:type="boolean">true</item>
                </item>
            </argument>
            <settings>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>2097152</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">formula_brand/brand/uploadBanner</param>
                        </uploaderConfig>
                        <isMultipleFiles>true</isMultipleFiles>
                    </settings>
                </imageUploader>
            </formElements>
        </field>

        <field name="sale_page_banner" formElement="imageUploader">
            <settings>
                <label translate="true">Sale Page Banner</label>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>2097152</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">formula_brand/brand/uploadSalePageBanner</param>
                        </uploaderConfig>
                    </settings>
                </imageUploader>
            </formElements>
        </field>

        <fieldset name="brand_attributes">
            <settings>
                <label translate="true">Brand Attributes</label>
                <collapsible>true</collapsible>
                <opened>true</opened>
            </settings>

            <field name="is_korean" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">brand</item>
                        <item name="default" xsi:type="number">0</item>
                    </item>
                </argument>
                <settings>
                    <dataType>boolean</dataType>
                    <label translate="true">Is Korean Brand</label>
                    <dataScope>is_korean</dataScope>
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <valueMap>
                                <map name="false" xsi:type="number">0</map>
                                <map name="true" xsi:type="number">1</map>
                            </valueMap>
                            <prefer>toggle</prefer>
                        </settings>
                    </checkbox>
                </formElements>
            </field>

            <field name="is_global" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">brand</item>
                        <item name="default" xsi:type="number">0</item>
                    </item>
                </argument>
                <settings>
                    <dataType>boolean</dataType>
                    <label translate="true">Is Global Brand</label>
                    <dataScope>is_global</dataScope>
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <valueMap>
                                <map name="false" xsi:type="number">0</map>
                                <map name="true" xsi:type="number">1</map>
                            </valueMap>
                            <prefer>toggle</prefer>
                        </settings>
                    </checkbox>
                </formElements>
            </field>

            <field name="is_japanese" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">brand</item>
                        <item name="default" xsi:type="number">0</item>
                    </item>
                </argument>
                <settings>
                    <dataType>boolean</dataType>
                    <label translate="true">Is Japanese Brand</label>
                    <dataScope>is_japanese</dataScope>
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <valueMap>
                                <map name="false" xsi:type="number">0</map>
                                <map name="true" xsi:type="number">1</map>
                            </valueMap>
                            <prefer>toggle</prefer>
                        </settings>
                    </checkbox>
                </formElements>
            </field>

            <field name="is_african" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">brand</item>
                        <item name="default" xsi:type="number">0</item>
                    </item>
                </argument>
                <settings>
                    <dataType>boolean</dataType>
                    <label translate="true">Is African Brand</label>
                    <dataScope>is_african</dataScope>
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <valueMap>
                                <map name="false" xsi:type="number">0</map>
                                <map name="true" xsi:type="number">1</map>
                            </valueMap>
                            <prefer>toggle</prefer>
                        </settings>
                    </checkbox>
                </formElements>
            </field>

            <field name="is_indian" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">brand</item>
                        <item name="default" xsi:type="number">0</item>
                    </item>
                </argument>
                <settings>
                    <dataType>boolean</dataType>
                    <label translate="true">Is Indian Brand</label>
                    <dataScope>is_indian</dataScope>
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <valueMap>
                                <map name="false" xsi:type="number">0</map>
                                <map name="true" xsi:type="number">1</map>
                            </valueMap>
                            <prefer>toggle</prefer>
                        </settings>
                    </checkbox>
                </formElements>
            </field>

            <field name="is_trending" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">brand</item>
                        <item name="default" xsi:type="number">0</item>
                    </item>
                </argument>
                <settings>
                    <dataType>boolean</dataType>
                    <label translate="true">Is Trending Brand</label>
                    <dataScope>is_trending</dataScope>
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <valueMap>
                                <map name="false" xsi:type="number">0</map>
                                <map name="true" xsi:type="number">1</map>
                            </valueMap>
                            <prefer>toggle</prefer>
                        </settings>
                    </checkbox>
                </formElements>
            </field>

            <field name="is_popular" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">brand</item>
                        <item name="default" xsi:type="number">0</item>
                    </item>
                </argument>
                <settings>
                    <dataType>boolean</dataType>
                    <label translate="true">Is Popular Brand</label>
                    <dataScope>is_popular</dataScope>
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <valueMap>
                                <map name="false" xsi:type="number">0</map>
                                <map name="true" xsi:type="number">1</map>
                            </valueMap>
                            <prefer>toggle</prefer>
                        </settings>
                    </checkbox>
                </formElements>
            </field>

            <field name="is_sale" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">brand</item>
                        <item name="default" xsi:type="number">0</item>
                    </item>
                </argument>
                <settings>
                    <dataType>boolean</dataType>
                    <label translate="true">Is Sale Brand</label>
                    <dataScope>is_sale</dataScope>
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <valueMap>
                                <map name="false" xsi:type="number">0</map>
                                <map name="true" xsi:type="number">1</map>
                            </valueMap>
                            <prefer>toggle</prefer>
                        </settings>
                    </checkbox>
                </formElements>
            </field>

            <field name="discount_text" formElement="input">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">brand</item>
                    </item>
                </argument>
                <settings>
                    <dataType>text</dataType>
                    <label translate="true">Discount Text</label>
                    <dataScope>discount_text</dataScope>
                    <notice translate="true">Discount text shown on sale page (e.g., "Up to 9% off", "Flat 15% off")</notice>
                </settings>
            </field>
        </fieldset>
    </fieldset>
</form>