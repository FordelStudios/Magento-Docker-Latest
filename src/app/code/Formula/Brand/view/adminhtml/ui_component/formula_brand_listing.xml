<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">formula_brand_listing.formula_brand_listing_data_source</item>
            <item name="deps" xsi:type="string">formula_brand_listing.formula_brand_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add New Brand</label>
            </button>
        </buttons>
        <spinner>formula_brand_columns</spinner>
        <deps>
            <dep>formula_brand_listing.formula_brand_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="formula_brand_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">brand_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Formula_Brand::brand</aclResource>
        <dataProvider class="Formula\Brand\Ui\DataProvider\Brand\ListingDataProvider" name="formula_brand_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>brand_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="provider" xsi:type="string">formula_brand_listing.formula_brand_listing_data_source</item>
                </item>
            </argument>
            <settings>
                <chipsProvider>formula_brand_listing.formula_brand_listing.listing_top.listing_filters_chips</chipsProvider>
            </settings>
        </filterSearch>
        <filters name="listing_filters"/>
        <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected brands?</message>
                        <title translate="true">Delete brands</title>
                    </confirm>
                    <url path="formula_brand/brand/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="formula_brand_columns">
        <selectionsColumn name="ids">
            <settings>
                <indexField>brand_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="brand_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="name">
            <settings>
                <filter>text</filter>
                <label translate="true">Name</label>
            </settings>
        </column>
        <column name="tagline">
            <settings>
                <filter>text</filter>
                <label translate="true">Tagline</label>
            </settings>
        </column>
        <column name="certifications">
            <settings>
                <filter>text</filter>
                <label translate="true">Certifications</label>
            </settings>
        </column>
        <column name="description" class="Magento\Ui\Component\Listing\Columns\Column">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Description</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="escapeHtml" xsi:type="boolean">false</item>
                    <item name="truncate" xsi:type="number">50</item>
                </item>
            </argument>
        </column>
        <column name="country" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="Magento\Directory\Model\Config\Source\Country"/>
                <filter>select</filter>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>select</editorType>
                </editor>
                <dataType>select</dataType>
                <label translate="true">Country</label>
            </settings>
        </column>
        <!-- Boolean Fields -->
        <column name="is_korean" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <filter>select</filter>
                <options>
                    <option name="0" xsi:type="array">
                        <item name="value" xsi:type="number">0</item>
                        <item name="label" xsi:type="string" translate="true">No</item>
                    </option>
                    <option name="1" xsi:type="array">
                        <item name="value" xsi:type="number">1</item>
                        <item name="label" xsi:type="string" translate="true">Yes</item>
                    </option>
                </options>
                <dataType>select</dataType>
                <label translate="true">Korean Brand</label>
            </settings>
        </column>
        <column name="is_global" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <filter>select</filter>
                <options>
                    <option name="0" xsi:type="array">
                        <item name="value" xsi:type="number">0</item>
                        <item name="label" xsi:type="string" translate="true">No</item>
                    </option>
                    <option name="1" xsi:type="array">
                        <item name="value" xsi:type="number">1</item>
                        <item name="label" xsi:type="string" translate="true">Yes</item>
                    </option>
                </options>
                <dataType>select</dataType>
                <label translate="true">Global Brand</label>
            </settings>
        </column>
        <column name="is_japanese" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <filter>select</filter>
                <options>
                    <option name="0" xsi:type="array">
                        <item name="value" xsi:type="number">0</item>
                        <item name="label" xsi:type="string" translate="true">No</item>
                    </option>
                    <option name="1" xsi:type="array">
                        <item name="value" xsi:type="number">1</item>
                        <item name="label" xsi:type="string" translate="true">Yes</item>
                    </option>
                </options>
                <dataType>select</dataType>
                <label translate="true">Japanese Brand</label>
            </settings>
        </column>
        <column name="is_african" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <filter>select</filter>
                <options>
                    <option name="0" xsi:type="array">
                        <item name="value" xsi:type="number">0</item>
                        <item name="label" xsi:type="string" translate="true">No</item>
                    </option>
                    <option name="1" xsi:type="array">
                        <item name="value" xsi:type="number">1</item>
                        <item name="label" xsi:type="string" translate="true">Yes</item>
                    </option>
                </options>
                <dataType>select</dataType>
                <label translate="true">African Brand</label>
            </settings>
        </column>
        <column name="is_indian" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <filter>select</filter>
                <options>
                    <option name="0" xsi:type="array">
                        <item name="value" xsi:type="number">0</item>
                        <item name="label" xsi:type="string" translate="true">No</item>
                    </option>
                    <option name="1" xsi:type="array">
                        <item name="value" xsi:type="number">1</item>
                        <item name="label" xsi:type="string" translate="true">Yes</item>
                    </option>
                </options>
                <dataType>select</dataType>
                <label translate="true">Indian Brand</label>
            </settings>
        </column>
        <column name="is_trending" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <filter>select</filter>
                <options>
                    <option name="0" xsi:type="array">
                        <item name="value" xsi:type="number">0</item>
                        <item name="label" xsi:type="string" translate="true">No</item>
                    </option>
                    <option name="1" xsi:type="array">
                        <item name="value" xsi:type="number">1</item>
                        <item name="label" xsi:type="string" translate="true">Yes</item>
                    </option>
                </options>
                <dataType>select</dataType>
                <label translate="true">Trending Brand</label>
            </settings>
        </column>
        <column name="is_popular" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <filter>select</filter>
                <options>
                    <option name="0" xsi:type="array">
                        <item name="value" xsi:type="number">0</item>
                        <item name="label" xsi:type="string" translate="true">No</item>
                    </option>
                    <option name="1" xsi:type="array">
                        <item name="value" xsi:type="number">1</item>
                        <item name="label" xsi:type="string" translate="true">Yes</item>
                    </option>
                </options>
                <dataType>select</dataType>
                <label translate="true">Popular Brand</label>
            </settings>
        </column>
        <column name="promotional_banners" class="Formula\Brand\Ui\Component\Listing\Column\PromotionalBanners">
            <settings>
                <label translate="true">Promotional Banners</label>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
                <sortable>false</sortable>
                <filter>false</filter>
            </settings>
        </column>
        <column name="logo" component="Magento_Ui/js/grid/columns/thumbnail">
            <settings>
                <label translate="true">Logo</label>
                <bodyTmpl>ui/grid/cells/thumbnail</bodyTmpl>
                <sortable>false</sortable>
                <filter>false</filter>
            </settings>
        </column>
        <column name="sale_page_banner" class="Formula\Brand\Ui\Component\Listing\Column\SalePageBanner" component="Magento_Ui/js/grid/columns/thumbnail">
            <settings>
                <label translate="true">Sale Page Banner</label>
                <bodyTmpl>ui/grid/cells/thumbnail</bodyTmpl>
                <sortable>false</sortable>
                <filter>false</filter>
            </settings>
        </column>
        <column name="tags">
            <settings>
                <filter>text</filter>
                <label translate="true">Tags</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Formula\Brand\Ui\Component\Listing\Column\Actions">
            <settings>
                <indexField>brand_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>107</resizeDefaultWidth>
            </settings>
        </actionsColumn>
    </columns>
</listing>