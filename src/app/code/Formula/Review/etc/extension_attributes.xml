<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
	<extension_attributes for="Formula\Review\Api\Data\ReviewInterface">
		<attribute code="status" type="string" />
		<attribute code="created_at" type="string" />
		<attribute code="updated_at" type="string" />
		<attribute code="ratings_details" type="mixed" />
		<attribute code="is_recommended" type="boolean" />
		<attribute code="images" type="mixed" />
		<attribute code="customer_id" type="int" />
	</extension_attributes>

	<!-- Review aggregation for Product listing API -->
	<extension_attributes for="Magento\Catalog\Api\Data\ProductInterface">
		<attribute code="rating_summary" type="float" />
		<attribute code="reviews_count" type="int" />
	</extension_attributes>
</config>
