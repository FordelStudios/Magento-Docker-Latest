<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <!-- List product reviews (only the customer who created them can access) -->
    <route url="/V1/products/:sku/reviews" method="GET">
        <service class="Formula\Review\Api\ProductReviewRepositoryInterface" method="getList"/>
        <resources>
             <resource ref="anonymous"/>
        </resources>
    </route>

    <!-- Create review - only logged in customers -->
    <route url="/V1/reviews" method="POST">
        <service class="Formula\Review\Api\ProductReviewRepositoryInterface" method="create"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>

    <!-- Get review by ID - must belong to the logged in customer -->
    <route url="/V1/reviews/:id" method="GET">
        <service class="Formula\Review\Api\ProductReviewRepositoryInterface" method="get"/>
        <resources>
             <resource ref="anonymous"/>
        </resources>
    </route>

    <!-- Update review -->
    <route url="/V1/reviews/:id" method="PUT">
        <service class="Formula\Review\Api\ProductReviewRepositoryInterface" method="update"/>
        <resources>
             <resource ref="self"/>
        </resources>
    </route>

    <!-- Delete review -->
    <route url="/V1/reviews/:id" method="DELETE">
        <service class="Formula\Review\Api\ProductReviewRepositoryInterface" method="deleteById"/>
        <resources>
             <resource ref="self"/>
        </resources>
    </route>

     <!-- Delete review -->
    <route url="/V1/reviews/product/:sku" method="GET">
        <service class="Formula\Review\Api\ProductReviewRepositoryInterface" method="getCustomerExistingReview"/>
        <resources>
             <resource ref="self"/>
        </resources>
    </route>

    <!-- Admin-only endpoint to fetch ALL reviews -->
    <route url="/V1/reviews/all" method="GET">
        <service class="Formula\Review\Api\ProductReviewRepositoryInterface" method="getAllReviews"/>
        <resources>
            <resource ref="Magento_Backend::admin"/>
        </resources>
    </route>

    <!-- Review image upload - must be a logged in customer -->
    <route url="/V1/reviews/image-upload" method="POST">
        <service class="Formula\Review\Api\ReviewImageUploadInterface" method="upload"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>

     <!-- Purchase Verification by SKU -->
    <route url="/V1/reviews/customer/purchase-verification" method="GET">
        <service class="Formula\Review\Api\ProductReviewRepositoryInterface" method="verifyCustomerPurchase"/>
        <resources>
            <resource ref="self" />
        </resources>
    </route>
    
    <!-- Purchase Verification by Product ID -->
    <route url="/V1/reviews/customer/purchase-verification/product/:productId" method="GET">
        <service class="Formula\Review\Api\ProductReviewRepositoryInterface" method="verifyCustomerPurchase"/>
        <resources>
            <resource ref="self" />
        </resources>
    </route>

    <!-- Debug SKU matching - for troubleshooting purposes -->
    <route url="/V1/reviews/debug-sku/:sku" method="GET">
        <service class="Formula\Review\Api\ProductReviewRepositoryInterface" method="debugSkuMatching"/>
        <resources>
            <resource ref="self" />
        </resources>
    </route>
</routes>
