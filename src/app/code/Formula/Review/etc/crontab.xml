<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <!-- Sync review aggregation data every hour -->
        <job name="formula_review_aggregation_sync" instance="Formula\Review\Cron\SyncReviewAggregation" method="execute">
            <schedule>0 * * * *</schedule>
        </job>
    </group>
</config>
