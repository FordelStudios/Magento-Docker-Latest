<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/formula-home-content/active" method="GET">
        <service class="Formula\HomeContent\Api\HomeContentManagementInterface" method="getHomeContent"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/formula-home-content/all" method="GET">
        <service class="Formula\HomeContent\Api\HomeContentManagementInterface" method="getAllHomeContentEntities"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>