<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">formula_homecontent_form.formula_homecontent_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">HomePage Content</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Formula\HomeContent\Block\Adminhtml\HomeContent\Edit\SaveButton"/>
            <button name="back" class="Formula\HomeContent\Block\Adminhtml\HomeContent\Edit\BackButton"/>
        </buttons>
        <namespace>formula_homecontent_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>formula_homecontent_form.formula_homecontent_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="formula_homecontent_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="formula_homecontent/homecontent/save"/>
        </settings>
        <dataProvider class="Formula\HomeContent\Model\HomeContent\DataProvider" name="formula_homecontent_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">HomePage Content</label>
        </settings>
        
        <!-- Hero Banners -->
        <field name="hero_banners" sortOrder="10" formElement="fileUploader">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">homecontent</item>
                </item>
            </argument>
            <settings>
                <elementTmpl>ui/form/element/uploader/uploader</elementTmpl>
                <dataType>string</dataType>
                <label translate="true">Hero Banners (Multiple Images)</label>
                <visible>true</visible>
                <required>false</required>
            </settings>
            <formElements>
                <fileUploader>
                    <settings>
                        <required>false</required>
                        <uploaderConfig>
                            <param xsi:type="url" name="url" path="formula_homecontent/homecontent/uploadHero"/>
                        </uploaderConfig>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                    </settings>
                </fileUploader>
            </formElements>
        </field>

        <!-- Five Step Routine Banner -->
        <field name="five_step_routine_banner" sortOrder="20" formElement="imageUploader">
            <settings>
                <dataType>string</dataType>
                <label translate="true">Build your routine - 5 step routine banner</label>
                <visible>true</visible>
                <required>false</required>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <required>false</required>
                        <uploaderConfig>
                            <param xsi:type="url" name="url" path="formula_homecontent/homecontent/uploadFiveStep"/>
                        </uploaderConfig>
                        <previewTmpl>Magento_Catalog/image-preview</previewTmpl>
                        <openDialogTitle>Media Gallery</openDialogTitle>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                    </settings>
                </imageUploader>
            </formElements>
        </field>

        <!-- Three Step Routine Banner -->
        <field name="three_step_routine_banner" sortOrder="30" formElement="imageUploader">
            <settings>
                <dataType>string</dataType>
                <label translate="true">Build your routine - 3 step routine banner</label>
                <visible>true</visible>
                <required>false</required>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <required>false</required>
                        <uploaderConfig>
                            <param xsi:type="url" name="url" path="formula_homecontent/homecontent/uploadThreeStep"/>
                        </uploaderConfig>
                        <previewTmpl>Magento_Catalog/image-preview</previewTmpl>
                        <openDialogTitle>Media Gallery</openDialogTitle>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                    </settings>
                </imageUploader>
            </formElements>
        </field>

        <!-- Discover Your Formula Banner -->
        <field name="discover_your_formula_banner" sortOrder="40" formElement="imageUploader">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">homecontent</item>
                </item>
            </argument>
            <settings>
                <elementTmpl>ui/form/element/uploader/uploader</elementTmpl>
                <dataType>string</dataType>
                <label translate="true">Discover your formula Banner</label>
                <visible>true</visible>
                <required>false</required>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <required>false</required>
                        <uploaderConfig>
                            <param xsi:type="url" name="url" path="formula_homecontent/homecontent/uploadDiscover"/>
                        </uploaderConfig>
                        <previewTmpl>Magento_Catalog/image-preview</previewTmpl>
                        <openDialogTitle>Media Gallery</openDialogTitle>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                    </settings>
                </imageUploader>
            </formElements>
        </field>

        <!-- Best of Korean Formula Banner -->
        <field name="best_of_korean_formula_banner" sortOrder="50" formElement="imageUploader">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">homecontent</item>
                </item>
            </argument>
            <settings>
                <elementTmpl>ui/form/element/uploader/uploader</elementTmpl>
                <dataType>string</dataType>
                <label translate="true">Best of Korean Formula Banner</label>
                <visible>true</visible>
                <required>false</required>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <required>false</required>
                        <uploaderConfig>
                            <param xsi:type="url" name="url" path="formula_homecontent/homecontent/uploadKorean"/>
                        </uploaderConfig>
                        <previewTmpl>Magento_Catalog/image-preview</previewTmpl>
                        <openDialogTitle>Media Gallery</openDialogTitle>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                    </settings>
                </imageUploader>
            </formElements>
        </field>

        <!-- Discover Korean Ingredients Banners -->
        <dynamicRows name="discover_korean_ingredients_banners" sortOrder="60">
            <settings>
                <addButtonLabel translate="true">Add Korean Ingredient Banner</addButtonLabel>
                <label translate="true">Discover korean ingredients Banners</label>
                <componentType>dynamicRows</componentType>
            </settings>
            <container name="record" component="Magento_Ui/js/dynamic-rows/record">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="isTemplate" xsi:type="boolean">true</item>
                        <item name="is_collection" xsi:type="boolean">true</item>
                        <item name="componentType" xsi:type="string">container</item>
                    </item>
                </argument>
                <field name="ingredient_id" formElement="select">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="source" xsi:type="string">homecontent</item>
                        </item>
                    </argument>
                    <settings>
                        <dataType>text</dataType>
                        <label translate="true">Ingredient</label>
                        <dataScope>ingredient_id</dataScope>
                        <visible>true</visible>
                        <required>false</required>
                    </settings>
                    <formElements>
                        <select>
                            <settings>
                                <options class="Formula\HomeContent\Model\Source\Ingredient"/>
                            </settings>
                        </select>
                    </formElements>
                </field>
                <field name="image" formElement="imageUploader">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="source" xsi:type="string">homecontent</item>
                        </item>
                    </argument>
                    <settings>
                        <dataType>string</dataType>
                        <label translate="true">Image</label>
                        <visible>true</visible>
                        <required>false</required>
                    </settings>
                    <formElements>
                        <imageUploader>
                            <settings>
                                <required>false</required>
                                <uploaderConfig>
                                    <param xsi:type="url" name="url" path="formula_homecontent/homecontent/uploadIngredientImage"/>
                                </uploaderConfig>
                                <previewTmpl>Magento_Catalog/image-preview</previewTmpl>
                                <openDialogTitle>Media Gallery</openDialogTitle>
                                <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                                <maxFileSize>4194304</maxFileSize>
                            </settings>
                        </imageUploader>
                    </formElements>
                </field>
                <actionDelete>
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="componentType" xsi:type="string">actionDelete</item>
                            <item name="dataType" xsi:type="string">text</item>
                            <item name="label" xsi:type="string">Actions</item>
                        </item>
                    </argument>
                </actionDelete>
            </container>
        </dynamicRows>

        <!-- Perfect Gift Image -->
        <field name="perfect_gift_image" sortOrder="70" formElement="imageUploader">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">homecontent</item>
                </item>
            </argument>
            <settings>
                <elementTmpl>ui/form/element/uploader/uploader</elementTmpl>
                <dataType>string</dataType>
                <label translate="true">Perfect Gift Banner</label>
                <visible>true</visible>
                <required>false</required>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <required>false</required>
                        <uploaderConfig>
                            <param xsi:type="url" name="url" path="formula_homecontent/homecontent/uploadGift"/>
                        </uploaderConfig>
                        <previewTmpl>Magento_Catalog/image-preview</previewTmpl>
                        <openDialogTitle>Media Gallery</openDialogTitle>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                    </settings>
                </imageUploader>
            </formElements>
        </field>

        <!-- Bottom Banner -->
        <field name="bottom_banner" sortOrder="80" formElement="imageUploader">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">homecontent</item>
                </item>
            </argument>
            <settings>
                <elementTmpl>ui/form/element/uploader/uploader</elementTmpl>
                <dataType>string</dataType>
                <label translate="true">Bottom Banner</label>
                <visible>true</visible>
                <required>false</required>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <required>false</required>
                        <uploaderConfig>
                            <param xsi:type="url" name="url" path="formula_homecontent/homecontent/uploadBottom"/>
                        </uploaderConfig>
                        <previewTmpl>Magento_Catalog/image-preview</previewTmpl>
                        <openDialogTitle>Media Gallery</openDialogTitle>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                    </settings>
                </imageUploader>
            </formElements>
        </field>

        <!-- Active Status -->
        <field name="active" sortOrder="90" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">homecontent</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <dataType>number</dataType>
                <label translate="true">Active</label>
                <dataScope>active</dataScope>
                <notice translate="true">Enable or disable this content</notice>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="number">0</item>
                                <item name="label" xsi:type="string" translate="true">No</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="number">1</item>
                                <item name="label" xsi:type="string" translate="true">Yes</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>