<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Image Uploader Configuration -->
    <type name="Formula\SpecialOffer\Controller\Adminhtml\SpecialOffer\Upload">
        <arguments>
            <argument name="imageUploader" xsi:type="object">Formula\SpecialOffer\Model\ImageUploader</argument>
        </arguments>
    </type>

    <!-- Virtual Type for Grid Collection -->
    <virtualType name="Formula\SpecialOffer\Model\ResourceModel\SpecialOffer\Grid\Collection"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">formula_special_offer</argument>
            <argument name="resourceModel" xsi:type="string">Formula\SpecialOffer\Model\ResourceModel\SpecialOffer</argument>
        </arguments>
    </virtualType>

    <!-- Grid Data Provider -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="specialoffer_listing_data_source" xsi:type="string">Formula\SpecialOffer\Model\ResourceModel\SpecialOffer\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
</config>
